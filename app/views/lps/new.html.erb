<div class="container mt-5">
  <h1>Create New LP</h1>
  <%= form_with(model: @lp, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Enter LP name' %>
    </div>
    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control', placeholder: 'Enter LP description' %>
    </div>
    <div class="mb-3">
      <%= form.label :artist_id, 'Artist', class: 'form-label' %>
      <%= form.collection_select :artist_id, Artist.all, :id, :name, {}, { class: 'form-control' } %>
    </div>
    <div class="d-flex justify-content-between">
      <%= link_to 'Back', lps_path, class: 'btn btn-secondary' %>
      <%= form.submit 'Create LP', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
