<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Lp ID</th>
      <th scope="col">Name</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @lps.each do |lp| %>
      <tr>
        <th scope="row"><%= lp.id %></th>
        <td><%= lp.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>