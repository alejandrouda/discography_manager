<div class="container mt-5">
  <h1>Create New Artist</h1>
  <%= form_with(model: @artist, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Enter Artist name' %>
    </div>
    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control', placeholder: 'Enter Artist description' %>
    </div>
    <div class="d-flex justify-content-between">
      <%= link_to 'Back', artists_path, class: 'btn btn-secondary' %>
      <%= form.submit 'Create Artist', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
