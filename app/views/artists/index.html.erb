<div class="d-flex justify-content-between mb-3">
  <h4>Artists</h4>
  <%= link_to '+ Create New artist', new_artist_path, class: 'btn btn-primary' %>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Artist ID</th>
      <th scope="col">Name</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <th scope="row"><%= artist.id %></th>
        <td><%= artist.name %></td>
        <td>
          <%= link_to 'View', artist_path(artist), class: 'small p-2' %>
          <%= link_to 'Edit', edit_artist_path(artist), class: 'small p-2' %>
          <%= link_to "Delete", artist, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>