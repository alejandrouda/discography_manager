<div class="signup-container">
  <div class="signup-card">
    <h3 class="signup-header">Discography Manager</h3>
    <h3 class="signup-header">Sign Up</h3>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
      <div class="form-group">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control', placeholder: "Enter your email" }, label: false %>
      </div>
      <div class="form-group">
        <%= f.input :password, required: false, input_html: { class: 'form-control', placeholder: "Enter your password" }, label: false %>
      </div>
      <div class="form-group">
        <%= f.input :password_confirmation, required: false, input_html: { class: 'form-control', placeholder: "Confirm your password" }, label: false %>
      </div>
      <div class="form-group">
        <%= f.button :submit, "Sign Up", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <div class="text-center mt-4">
      <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "small" %>
    </div>
  </div>
</div>