<div class="forgot-password-container">
  <div class="forgot-password-card">
    <h3 class="forgot-password-header">Discography Manager</h3>
    <h3 class="forgot-password-header">Forgot Password</h3>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "forgot-password-form" }) do |f| %>
      <div class="form-group">
        <%= f.input :email, required: true, input_html: { class: 'form-control', placeholder: "Enter your email" }, label: false %>
      </div>
      <div class="form-group">
        <%= f.button :submit, "Send Password Reset Instructions", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <div class="text-center mt-4">
      <%= link_to "Back to Log In", new_session_path(resource_name), class: "small" %>
    </div>
  </div>
</div>
