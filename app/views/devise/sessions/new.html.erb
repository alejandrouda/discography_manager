<div class="login-container">
  <div class="login-card">
    <h3 class="login-header">Discography Manager</h3>
    <h3 class="login-header">Log In</h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
      <div class="form-group">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control', placeholder: "Enter your email" }, label: false %>
      </div>
      <div class="form-group">
        <%= f.input :password, required: false, input_html: { class: 'form-control', placeholder: "Enter your password" }, label: false %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-group form-check">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label' %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.button :submit, "Log In", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <div class="text-center mt-4">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "small" %><br>
      <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "small" %>
    </div>
  </div>
</div>